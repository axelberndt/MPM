<?xml version="1.0" encoding="UTF-8"?>
<?xml-model href="https://tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://relaxng.org/ns/structure/1.0"?>
<?xml-model href="https://tei-c.org/release/xml/tei/custom/schema/relaxng/tei_odds.rng" type="application/xml" schematypens="http://purl.oclc.org/dsdl/schematron"?>
<tei:classSpec ident="att.time.physical.frame" type="atts" module="mpm.core" mode="add" xmlns:tei="http://www.tei-c.org/ns/1.0" xmlns:schematron="http://purl.oclc.org/dsdl/schematron">
    <tei:gloss>milliseconds frame attribute class</tei:gloss>
    
    <tei:desc>This attribute class provides attribute <tei:att>milliseconds.offset</tei:att>.</tei:desc>
    
    <tei:constraintSpec ident="milliseconds_frame_constraint" scheme="schematron">
        <tei:gloss>frame constraint</tei:gloss>
        <tei:desc><tei:att>milliseconds.frame.start</tei:att> &#x2264; <tei:att>milliseconds.frame.end</tei:att></tei:desc>
        <tei:constraint>
            <!-- for every @milliseconds.frame.start in conjunction with @milliseconds.frame.end -->
            <schematron:rule context="attribute::milliseconds.frame.start[parent::*[attribute::milliseconds.frame.end]]">
                <schematron:let name="frameStart" value="number()" />
                <schematron:let name="frameEnd" value="number(parent::*/attribute::milliseconds.frame.end)"/>
                <schematron:assert test="$frameStart le $frameEnd">
                    Value constraint validation in element <schematron:value-of select="local-name(parent::*)"/>: @milliseconds.frame.start (<schematron:value-of select="$frameStart" />) &#x2264; @milliseconds.frame.end (<schematron:value-of select="$frameEnd" />)
                </schematron:assert>
            </schematron:rule>
        </tei:constraint>
    </tei:constraintSpec>

    <tei:attList>
        <tei:attDef ident="milliseconds.frame.start" usage="opt">
            <tei:gloss>frame start in milliseconds</tei:gloss>
            <tei:desc>This attribute defines the beginning of a frame in milliseconds.</tei:desc>
            <tei:datatype>
                <tei:dataRef name="double"/>
            </tei:datatype>
            <tei:defaultVal>0.0</tei:defaultVal>
        </tei:attDef>
        
        <tei:attDef ident="milliseconds.frame.end" usage="opt">
            <tei:gloss>frame end milliseconds</tei:gloss>
            <tei:desc>This attribute defines the end of a frame in milliseconds.</tei:desc>
            <tei:datatype>
                <tei:dataRef name="double"/>
            </tei:datatype>
            <tei:defaultVal>0.0</tei:defaultVal>
        </tei:attDef>
    </tei:attList>
</tei:classSpec>
